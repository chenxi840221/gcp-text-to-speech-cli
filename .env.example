# Google Cloud Text-to-Speech Application Environment Variables
# Copy this file to .env and fill in your actual values

# ==========================================
# Google Cloud Platform Configuration
# ==========================================

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Google Cloud Region
VERTEX_AI_LOCATION=us-central1

# Service Account Credentials
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ==========================================
# Text-to-Speech Configuration
# ==========================================

# Storage Configuration
TTS_BUCKET_NAME=your-project-id-tts-audio
TTS_AUDIO_PREFIX=tts-audio
TTS_STORAGE_CLASS=STANDARD

# ==========================================
# API Configuration
# ==========================================

# Default TTS Settings
DEFAULT_LANGUAGE=en-US
DEFAULT_VOICE_GENDER=NEUTRAL
DEFAULT_AUDIO_ENCODING=MP3
DEFAULT_SPEAKING_RATE=1.0
DEFAULT_PITCH=0.0

# API Limits
MAX_TEXT_LENGTH=5000
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# ==========================================
# Application Settings
# ==========================================

# Environment Mode (development, staging, production)
ENVIRONMENT=development

# Application Configuration
PORT=8080
DEBUG=true
FLASK_ENV=development

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=false

# ==========================================
# Security Settings
# ==========================================

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Authentication
AUTH_REQUIRED=false
API_KEY_VALIDATION=false

# ==========================================
# Database Configuration
# ==========================================

# Firestore
FIRESTORE_DATABASE=(default)
FIRESTORE_COLLECTION_PREFIX=dev_

# ==========================================
# Caching Configuration
# ==========================================

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Redis Configuration (optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ==========================================
# CLI Configuration
# ==========================================

# CLI Default Settings
CLI_VERBOSE=false
CLI_AUTO_PLAY=false
CLI_OUTPUT_DIR=./tts-output
CLI_WORKERS=3

# Batch Processing
BATCH_CHUNK_SIZE=4500
BATCH_PRESERVE_SENTENCES=true
BATCH_CONTINUE_ON_ERROR=true